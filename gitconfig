[user]
	name = Damien Bastin
  email = damien@trinetcloud.com
[merge]
  summary = true
	tool = vimdiff
[alias]
	lg = log --graph --since='2 weeks ago'
  l = log --graph --abbrev-commit --date=relative
  st = status
  ci = commit
  co = checkout
  amend = commit --amend
  head = !git l -1
  r = !git l -20
  ra = !git r --all
[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[apply]
  whitespace = nowarn
[color]
  branch = auto
  diff = auto
  status = auto
	ui = always
[core]
  excludesfile = ~/.gitignore
	whitespace = fix
[default]
	push = tracking
	pull = tracking
[diff]
	tool = vimdiff
